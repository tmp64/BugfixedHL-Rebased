{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "dependencies": [
    "fmt",
    "nlohmann-json",
    "pcre",

    {
      "name": "curl",
      "default-features": false,
      "features": [
        {
          "name": "schannel",
          "platform": "windows"
        },
        {
          "name": "openssl",
          "platform": "!windows"
        }
      ]
    },
    {
      "name": "libzip",
      "default-features": false
    },
    {
      "name": "stackwalker",
      "platform": "windows",
      "default-features": false
    },
    {
      "name": "freetype",
      "default-features": false,
      "features": [
        "error-strings",
        "subpixel-rendering",
        "zlib"
      ]
    },
    {
      "name": "fontconfig",
      "default-features": false
    }
  ]
}